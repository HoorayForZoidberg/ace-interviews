<div class="container">


  <div class="card-profile">
    <div class="card-profile-text">
      <h5><%= user.first_name %> <%= user.last_name %></h5>
      <% user.rating_as_interviewer(past: true).to_i.times do %>
        <i class="fas fa-star small"></i>
      <% end %>
      <% (5 - user.rating_as_interviewer(past: true).to_i).times do %>
        <i class="far fa-star small"></i>
      <% end %>
      <ul>
        <li><%= pluralize(user.meetings_as_interviewee(past: true).count, 'case') %> practiced</li>
        <li>Average rating: <%= user.rating_as_interviewee(past: true).round(2) %></li>
        <li><%= pluralize(user.meetings_as_interviewer(past:true).count, 'interview') %> given</li>
        <li>Average rating as an interviewer: <%= user.rating_as_interviewer(past: true).round(2) %></li>
      </ul>
    </div>
    <div class="card-profile-avatar">
      <% if user.avatar.attached? %>
        <%= cl_image_tag user.avatar.key, alt: "user-avatar", width: 200, height: 200, crop: :fill %>
      <% else %>
        <%= image_tag "avatar-default.png", alt: "user-avatar", width: 200, height: 200, crop: :fill %>
      <% end %>
    </div>
  </div>

</div>
